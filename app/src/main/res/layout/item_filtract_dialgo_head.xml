<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/relative_layout_item_filtrate_head"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:layout_marginBottom="15pt"
        android:background="@drawable/selector_bg_flitract">

        <TextView
            android:id="@+id/text_view_item_filtrate_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="全部歌单"
            android:textColor="@color/color_404040"
            android:textSize="12pt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_angle" />
    </RelativeLayout>
</LinearLayout>