<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="125pt"
        android:layout_height="125pt"
        android:layout_margin="5pt"
        android:background="@color/color_e5e5e5e">

        <ImageView
            android:layout_width="125pt"
            android:layout_height="125pt" />

        <ImageView
            android:layout_width="12pt"
            android:layout_height="12pt"
            android:layout_toLeftOf="@+id/text_view_bfl"
            android:background="@drawable/svg_icon_headset" />

        <TextView
            android:id="@+id/text_view_bfl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5pt"
            android:text="400"
            android:textColor="@color/white"
            android:textSize="10pt" />
        <ImageView
            android:id="@+id/image_author"
            android:layout_width="12pt"
            android:layout_height="12pt"
            android:layout_alignParentBottom="true"
            android:background="@drawable/svg_icon_rt" />
        <TextView
            android:id="@+id/text_view_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5pt"
            android:text="米老鼠"
            android:layout_alignParentBottom="true"
           android:layout_toRightOf="@+id/image_author"
            android:textColor="@color/white"
            android:textSize="10pt" />
    </RelativeLayout>

    <TextView
        android:layout_width="125pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginBottom="10pt"
        android:text="100首古风"
        android:textSize="12pt" />
</LinearLayout>