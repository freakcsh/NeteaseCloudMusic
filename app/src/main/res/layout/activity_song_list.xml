<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FF919C96"
        android:orientation="vertical">

        <com.freak.neteasecloudmusic.view.custom.toolbar.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tool_left_icon="@drawable/svg_arrows_left"
            app:tool_title="歌单" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@drawable/bg_shape_song_list"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="80pt"
            android:layout_height="80pt"
            android:layout_marginLeft="15pt"
            android:background="@color/color_e5e5e5e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10pt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="20pt"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:background="@drawable/svg_icon_crown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5pt"
                    android:text="精品歌单"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14pt" />

                <View
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:background="@drawable/svg_arrows_right_white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"
                android:paddingLeft="5pt"
                android:paddingTop="10pt"
                android:paddingRight="15pt"
                android:singleLine="true"
                android:text="华语 | 难以被复制，声线极具特色声线极具特色声线极具特色"
                android:textColor="@color/color_BFBFBF"
                android:textSize="14pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5pt"
                android:paddingTop="5pt"
                android:paddingRight="15pt"
                android:text="未见其人，先闻其声，那些难以被复制的华语女声"
                android:textColor="@color/color_BFBFBF"
                android:textSize="12pt" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40pt">

        <TextView
            android:id="@+id/text_view_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15pt"
            android:text="华语"
            android:textColor="@color/color_404040"
            android:textSize="13pt" />
        <View
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_centerVertical="true"
            android:background="@drawable/svg_arrows_right"
            android:layout_toRightOf="@+id/text_view_category"/>

        <TextView
            android:id="@+id/text_view_gf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10pt"
            android:paddingRight="10pt"
            android:text="古风"
            android:textSize="11pt" />

        <View
            android:id="@+id/view_gf"
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:layout_marginTop="15pt"
            android:layout_marginBottom="15pt"
            android:layout_toLeftOf="@+id/text_view_gf"
            android:background="@color/color_e5e5e5e" />

        <TextView
            android:id="@+id/text_view_dz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/view_gf"
            android:gravity="center"
            android:paddingLeft="10pt"
            android:paddingRight="10pt"
            android:text="电子"
            android:textSize="11pt" />

        <View
            android:id="@+id/view_dz"
            android:layout_width="1pt"
            android:layout_height="match_parent"
            android:layout_marginTop="15pt"
            android:layout_marginBottom="15pt"
            android:layout_toLeftOf="@+id/text_view_dz"
            android:background="@color/color_e5e5e5e" />

        <TextView
            android:id="@+id/text_view_hy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/view_dz"
            android:gravity="center"
            android:paddingLeft="10pt"
            android:paddingRight="10pt"
            android:text="华语"
            android:textSize="11pt" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_song_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>