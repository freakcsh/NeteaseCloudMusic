<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_local_music"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_marginLeft="10pt"
            android:background="@drawable/svg_icon_music" />

        <TextView
            android:id="@+id/text_view_music_local_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:text="本地音乐(0首)"
            android:textSize="14pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="50pt"
        android:background="@color/color_e5e5e5e" />

    <LinearLayout
        android:id="@+id/linear_layout_recent_play"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_marginLeft="10pt"
            android:background="@drawable/svg_icon_music_recent_play" />

        <TextView
            android:id="@+id/text_view_music_recent_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:text="最近播放(0首)"
            android:textSize="14pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="50pt"
        android:background="@color/color_e5e5e5e" />

    <LinearLayout
        android:id="@+id/linear_layout_download_manager"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_marginLeft="10pt"
            android:background="@drawable/svg_icon_music_download" />

        <TextView
            android:id="@+id/text_view_music_download_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:text="下载管理(0首)"
            android:textSize="14pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="50pt"
        android:background="@color/color_e5e5e5e" />

    <LinearLayout
        android:id="@+id/linear_layout_broadcasting_station"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_marginLeft="10pt"
            android:background="@drawable/svg_icon_music_broadcasting_station" />

        <TextView
            android:id="@+id/text_view_music_broadcasting_station"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:text="我的电台(0首)"
            android:textSize="14pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="50pt"
        android:background="@color/color_e5e5e5e" />

    <LinearLayout
        android:id="@+id/linear_layout_collect"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_marginLeft="10pt"
            android:background="@drawable/svg_icon_music_collect" />

        <TextView
            android:id="@+id/text_view_music_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10pt"
            android:text="我的收藏(0首)"
            android:textSize="14pt" />
    </LinearLayout>


</LinearLayout>