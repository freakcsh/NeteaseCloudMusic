<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44pt">
    <TextView
        android:id="@+id/text_view_song_list_detail_item_number"
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:background="@drawable/svg_icon_trumpet"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_song_list_detail_item_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不不减肥吧"
                android:gravity="center_vertical"
                android:textColor="@color/color_404040"
                android:paddingLeft="35pt"
                android:textSize="11pt"
                android:paddingTop="8pt"/>
            <TextView
                android:id="@+id/text_view_song_list_detail_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不不减肥吧"
                android:gravity="center_vertical"
                android:textColor="@color/color_404040"
                android:paddingLeft="35pt"
                android:paddingTop="2pt"
                android:textSize="8pt"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_song_list_detail_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/svg_icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15pt"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/color_e5e5e5e"
        android:layout_marginLeft="35pt" />
</LinearLayout>