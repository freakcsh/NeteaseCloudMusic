<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FF3F3334"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:layout_marginLeft="15pt">

                <ImageView
                    android:id="@+id/img_song_list_detail_logo"
                    android:layout_width="80pt"
                    android:layout_height="80pt" />

                <ImageView
                    android:layout_width="12pt"
                    android:layout_height="12pt"
                    android:layout_marginTop="5pt"
                    android:layout_toLeftOf="@+id/text_view_song_list_detail_bfl"
                    android:background="@drawable/svg_icon_headset" />

                <TextView
                    android:id="@+id/text_view_song_list_detail_bfl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5pt"
                    android:paddingRight="5pt"
                    android:textColor="@color/white"
                    android:textSize="10pt" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_song_list_detail_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15pt"
                    android:paddingTop="25pt"
                    android:text="古典"
                    android:textColor="@color/white"
                    android:textSize="13pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_song_list_detail_author_photo"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_marginLeft="15pt" />

                    <TextView
                        android:id="@+id/text_view_song_list_detail_author"
                        android:layout_width="wrap_content"
                        android:layout_height="20pt"
                        android:gravity="center"
                        android:paddingLeft="8pt"
                        android:textColor="@color/white"
                        android:textSize="10pt" />
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:background="@drawable/svg_arrows_right_white"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt">

            <LinearLayout
                android:id="@+id/linear_layout_one"
                android:layout_width="match_parent"
                android:layout_height="50pt"
                >
                <LinearLayout
                    android:id="@+id/linear_layout_song_list_detail_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:background="@drawable/svg_icon_comment"/>
                    <TextView
                        android:id="@+id/text_view_song_list_detail_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textColor="@color/white"
                        android:paddingTop="3pt"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_layout_song_list_detail_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:background="@drawable/svg_icon_share"/>
                    <TextView
                        android:id="@+id/text_view_song_list_detail_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textColor="@color/white"
                        android:paddingTop="3pt"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_layout_song_list_detail_download"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:background="@drawable/svg_icon_down_load"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:text="下载"
                        android:textColor="@color/white"
                        android:paddingTop="3pt"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_layout_song_list_detail_more_selector"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:background="@drawable/svg_icon_more_selector"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:text="多选"
                        android:textColor="@color/white"
                        android:paddingTop="3pt"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_layout_one"
                android:background="@drawable/shape_bg_circle_white"
                >
                <ImageView
                    android:id="@+id/img_song_list_detail_start_all"
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_centerVertical="true"
                    android:background="@drawable/svg_icon_bo_fang"
                    android:layout_marginLeft="10pt"/>
                <TextView
                    android:id="@+id/text_view_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="全部播放"
                    android:layout_toRightOf="@+id/img_song_list_detail_start_all"
                    android:gravity="center"
                    android:textColor="@color/color_404040"
                    android:textSize="11pt"
                    android:paddingLeft="5pt"/>
                <TextView
                    android:id="@+id/text_view_song_list_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/text_view_one"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_666666"
                    android:textSize="11pt"
                    />
                <TextView
                    android:id="@+id/text_view_song_list_detail_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"

                    android:paddingLeft="10pt"
                    android:paddingRight="10pt"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="11pt"
                    android:background="@drawable/shape_bg_circle_red_right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1pt"
                    android:background="@color/color_e5e5e5e"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>