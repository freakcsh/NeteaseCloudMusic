<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.freak.neteasecloudmusic.view.custom.toolbar.SimpleToolbar
        android:id="@+id/simple_toolbar_hot_song_list"
        android:layout_width="match_parent"
        android:layout_height="49pt"
        app:tool_title="精品歌单"
        app:tool_left_icon="@drawable/svg_arrows_left"
        android:background="@color/colorPrimary"
        app:tool_right_text="筛选"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_hot_song_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>